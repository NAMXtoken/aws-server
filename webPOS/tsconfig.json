{
    "compilerOptions": {
        "ignoreDeprecations": "6.0",
        "allowJs": false,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "es2023"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "middleware.js"
        ]
}